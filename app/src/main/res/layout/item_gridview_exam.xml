<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linExam"
    android:layout_marginVertical="160dp"
    android:background="@drawable/custom_textview_question"
    android:gravity="center"


    >

<!--    chữ và hình Gridview -->
    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/image_exam_2"
        android:paddingTop="3dp"
        />
    <TextView
        android:text="Loại đề"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnumExam"
        android:textSize="20dp"
        android:paddingBottom="8dp"
        android:textStyle="bold"/>

</LinearLayout>